<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>GetMovieListServlet</servlet-name>
        <servlet-class>MovieListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetMovieListServlet</servlet-name>
        <url-pattern>/movies</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddMovieServlet</servlet-name>
        <servlet-class>AddMovieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMovieServlet</servlet-name>
        <url-pattern>/add-new-movie</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddMovieJsp</servlet-name>
        <jsp-file>/AddMovieJsp.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMovieJsp</servlet-name>
        <url-pattern>/new-movie</url-pattern>
    </servlet-mapping>
</web-app>